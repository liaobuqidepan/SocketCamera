<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.shutup.socketcamera"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".menu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".socket_transfer.ServerActivity">
        </activity>
        <activity android:name=".socket_transfer.ClientActivity">
        </activity>
        <activity android:name=".server_push_transer.ServerPushActivity">
        </activity>
        <activity android:name=".socket_transfer.SocketTransferActivity">
        </activity>
        <activity android:name=".server_push_transer.ServerPushTransferActivity">
        </activity>
        <activity android:name=".base.BaseActivity">
        </activity>
    </application>

</manifest>